<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form 
            class="product-form" 
            action="<%= editMode ? "/admin/edit-product" : "/admin/add-product" %>" 
            method="POST"
        >
            <div class="form-control">
                <label for="title">Title</label>
                <input 
                    value="<%= editMode ? product.title : "" %>"
                    type="text" 
                    name="title" 
                    id="title"
                >
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input 
                    value="<%= editMode ? product.imageUrl : "" %>"
                    type="text" 
                    name="imageUrl" 
                    id="imageUrl"
                >
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input 
                    value="<%= editMode ? product.price : "" %>"
                    type="number" 
                    name="price" 
                    id="price" 
                    step="0.01"
                >
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea 
                    name="description" 
                    id="description" 
                    rows="5"
                ><%= editMode ? product.description : "" %></textarea>
            </div>

            <% if (editMode) { %>
                <input 
                    value="<%= product.id %>"
                    type="hidden" 
                    name="productId" 
                    id="productId"
                >
            <% } %>

            <button class="btn" type="submit">
                <% if (editMode) { %>
                    Update Product
                <% } else { %>
                    Add Product
                <% } %>
            </button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>