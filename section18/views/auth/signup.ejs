<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/signup" method="POST" novalidate>
            <% if (errorMessage) { %>
                <div style="color: red;"><%= errorMessage %></div>
            <% } %>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input 
                    value="<%= oldInput.email %>" 
                    class="<%= validationErrors.find((e) => e.path === 'email') 
                        ? 'invalid' : '' %>"
                    type="email" 
                    name="email" 
                    id="email"
                >
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input 
                    value="<%= oldInput.password %>" 
                    class="<%= validationErrors.find((e) => e.path === 'password') 
                            ? 'invalid' : '' %>"
                    type="password" 
                    name="password" 
                    id="password"
                >
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm Password</label>
                <input 
                    value="<%= oldInput.confirmPassword %>" 
                    class="<%= validationErrors.find((e) => e.path === 'confirmPassword') 
                            ? 'invalid' : '' %>"
                    type="password" 
                    name="confirmPassword" 
                    id="confirmPassword"
                >
            </div>
            <button class="btn" type="submit">Sign Up</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>